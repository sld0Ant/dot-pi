#!/usr/bin/expect -f
set timeout 60
set env(PI_SKIP_VERSION_CHECK) 1

proc type_slow {text {delay 40}} {
    foreach char [split $text ""] {
        send -- $char
        after $delay
    }
}

spawn asciinema rec --overwrite --idle-time-limit 2 --window-size 80x24 -c pi recordings/question.cast

expect "Sandbox"

type_slow "help me choose a js runtime for my new project"
send "\r"

sleep 20

send "\x03"
sleep 0.3
send "\x03"

expect eof
